{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            //"console": "externalTerminal",
            "console": "integratedTerminal",
            "preLaunchTask": "Build Debug",
            "internalConsoleOptions": "openOnSessionStart",
            "logging": {
                "moduleLoad": false,
                "trace": false
            },
            "visualizerFile": "${workspaceFolder}/.vscode/natvis/custom.natvis"
        },
        {
            "name": "Debug (No Build)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "logging": {
                "moduleLoad": false,
                "trace": false
            }
        },
        {
            "name": "Release",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main_release.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "Build Release",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Attach to Process",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Clean Build",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build.bat",
            "args": [
                "clean"
            ],
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "environment": [],
            "internalConsoleOptions": "openOnSessionStart",
            "logging": {
                "moduleLoad": false,
                "trace": false
            },
            "preLaunchTask": "Clean"
        }
    ]
}